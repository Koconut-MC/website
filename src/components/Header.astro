---
import { type page } from "../ts/global";

interface Props {
	current: page;
}

const header_pages = ["Home", "About", "Map", "Modpack", "Issues", "Commands"];

const { current } = Astro.props;
---

<header>
	<a href="/" class="header-logo">
		<img src="/koconutmc.webp" alt="Home" height="200px" />
	</a>
	<nav>
		{
			header_pages.map((page) => (
				<a
					href={
						page === "Home"
							? "/"
							: page[0].toLowerCase() + page.slice(1)
					}
					data-current={current === page}
					class="header-button"
				>
					{page}
				</a>
			))
		}
	</nav>
</header>

<style>
	header {
		display: grid;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 480px;
	}

	nav {
		display: flex;
		justify-content: space-around;
		align-items: center;
		padding: 0 50px;
		background-color: var(--element-clr);
		width: var(--header-width);
		box-shadow: 12px 12px 0px 1px rgb(10, 10, 10);
	}

	img {
		margin-top: 50px;
		transition: height 0.3s;
	}

	.header-logo {
		margin-inline: auto;

		&:hover img {
			height: 210px;
			transition: height 0.3s;
		}
	}

	.header-button {
		--text-clr: hsl(360 1 70);
		--text-clr-active: var(--special-clr);
		--background-clr-active: hsl(360 1 25);
		--background-clr-hover: hsl(360 1 20);

		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 0 50px 0 50px;
		height: 70px;
		font-weight: bold;
		font-size: 1.3rem;
		color: var(--text-clr);
		transition: background-color 0.2s;

		&[data-current="true"] {
			background-color: var(--background-clr-active);
			color: var(--text-clr-active);
		}
		&:hover:not(&[data-current="true"]) {
			background-color: var(--background-clr-hover);
			transition: background-color 0.1s;
		}
	}
</style>
