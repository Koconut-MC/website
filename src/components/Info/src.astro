---
import Players from "./Players.svelte";
import Clipboard from "./Clipboard.svelte";
---

<section>
	<p class="server-name">Koconut SMP</p>
	<p class="server-desc">
		A public Minecraft modded SMP focused around <a
			href="https://youtu.be/rR8W-f9YhYA"
			target="_blank">Create</a
		>, <a href="https://minecolonies.com/" target="_blank">MineColonies</a>,
		and RP.
	</p>
	<div class="about-button">
		<a href="/about/">Learn More</a>
	</div>
	<span class="spacer"></span>
	<Players client:only="svelte" />
	<Clipboard client:only="svelte" />
</section>

<style>
	section {
		background-color: var(--element-clr);
	}
	p {
		text-align: center;
	}

	.spacer {
		display: block;
		background-color: rgb(40, 40, 40);
		width: 80%;
		height: 1px;
		margin-inline: auto;
		margin: 30px auto 30px auto;
	}
	.server-desc {
		color: var(--text-clr-status);

		& > a {
			text-decoration: underline;
			color: var(--text-clr-status);

			&:hover,
			&:visited,
			&:active {
				color: var(--text-clr-status);
			}
		}
	}
	.server-name {
		color: var(--special-clr);
		font-weight: bold;
		font-size: 1.5rem;
	}
	.about-button {
		margin-inline: auto;
		width: fit-content;
		margin: 30px auto 0 auto;

		button {
			display: flex;
			align-items: center;
			gap: 10px;
		}
		a {
			border: 1.5px solid var(--text-clr-status);
			padding: 8px 30px 8px 30px;
			color: var(--text-clr-status);

			&:hover {
				background-color: rgb(40, 40, 40);
			}
		}
	}
	.playing-now {
		font-weight: bold;
		font-size: 1.5rem;
		margin: 50px 0 30px 0;
		color: var(--text-clr);
	}
</style>
