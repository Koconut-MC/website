---
interface Props {
	height: string;
	width: string;
}
const { height, width } = Astro.props;
---

<div>
	<a class="map-fullscreen" href="https://map.koconutmc.com/"
		>Full Screen <svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 -960 960 960"
			height="24px"
			width="24px"
		>
			<path
				d="M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h280v80H200v560h560v-280h80v280q0 33-23.5 56.5T760-120H200Zm188-212-56-56 372-372H560v-80h280v280h-80v-144L388-332Z"
			></path>
		</svg>
	</a>
	<iframe
		class="element"
		src="https://map.koconutmc.com/"
		title="koconut smp map"></iframe>
</div>

<style define:vars={{ height, width }}>
	svg {
		fill: rgb(200, 200, 200);
	}
	iframe {
		width: var(--width);
		height: var(--height);
		border: 0;
	}

	.map-fullscreen {
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #181818;
		height: 40px;
		font-weight: bold;
		gap: 10px;
		color: rgb(200, 200, 200);

		&:hover {
			background-color: #222;
		}
	}
</style>
