---
import header_pages, { to_anchor_link } from "./Pages.ts";
import MobileHeader from "./Mobile.svelte";

interface Props {
	current: string;
}
const { current } = Astro.props;
---

<header>
	<MobileHeader client:only="svelte" current={current} />
	<a href="/" class="header-logo">
		<img src="/koconutmc.webp" alt="Home" height="200px" />
	</a>
	<nav class="nav-header">
		{
			header_pages.map((page) => (
				<a
					href={to_anchor_link(page)}
					data-current={current === page}
					class="header-button"
				>
					{page}
				</a>
			))
		}
	</nav>
</header>

<style>
	header {
		display: grid;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 480px;

		@media only screen and (max-width: 1300px) {
			align-items: initial;
			justify-content: initial;
		}
	}

	img {
		margin-top: 50px;
		transition: height 0.3s;

		@media only screen and (max-width: 1300px) {
			margin: 0;
		}
	}

	.nav-header {
		display: flex;
		justify-content: space-around;
		align-items: center;
		padding: 0 50px;
		background-color: var(--element-clr);
		width: var(--header-width);
		box-shadow: 12px 12px 0px 1px rgb(10, 10, 10);
		height: 70px;

		@media only screen and (max-width: 1300px) {
			display: none;
		}
	}

	.header-logo {
		margin-inline: auto;

		&:is(:hover, :focus-visible) img {
			height: 210px;
			transition: height 0.3s;
		}
	}

	.header-button {
		--text-clr: hsl(360 1 70);
		--text-clr-active: var(--special-clr);
		--background-clr-active: hsl(360 1 25);
		--background-clr-hover: hsl(360 1 20);

		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 0 50px 0 50px;
		height: 70px;
		font-weight: bold;
		font-size: 1.3rem;
		color: var(--text-clr);
		transition: background-color 0.2s;

		&[data-current="true"] {
			background-color: var(--background-clr-active);
			color: var(--text-clr-active);
		}
		&:is(:hover, :focus-visible):not(&[data-current="true"]) {
			background-color: var(--background-clr-hover);
			transition: background-color 0.1s;
		}

		@media only screen and (max-width: 1300px) {
			display: none;
		}
	}
</style>
