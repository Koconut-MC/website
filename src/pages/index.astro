---
import Changelogs from "../components/Changelogs/src.astro";
import Slideshow from "../components/Slideshow/src.svelte";
import StatusApi from "../components/HomeAbout/src.astro";
import Discord from "../components/Discord.astro";
import Page from "../layouts/Page.astro";
import Map from "../components/Map.astro";
---

<Page page="Home">
	<div class="left">
		<Slideshow client:only="svelte" />
		<Changelogs />
	</div>
	<div class="right">
		<StatusApi />
		<Map height="500px" width="100%" />
		<Discord />
	</div>
</Page>

<style>
	.left,
	.right {
		display: grid;
		height: fit-content;
	}
	.right {
		width: 37%;
		gap: 30px;
	}
	.left {
		width: 60%;
		gap: 30px;

		.md-changelog:nth-child(even) {
			background-color: var(--element-clr-odd);
		}
	}
</style>
